                                    <% popularPosts.forEach(post=> { %>
                                        <div class="popular-post-card">
                                            <div class="popular-card-image-container">
                                                <a href="/series/<%= post.slug %>">
                                                    <img class="popular-card-image" src="<%= post.thumbnail %>"
                                                        alt="<%= post.title %>">
                                                </a>
                                                <% let catBadgeClass='bg-red-600' ; if (post.category==='Video' )
                                                    catBadgeClass='bg-blue-600' ; if (post.category==='Podcast' )
                                                    catBadgeClass='bg-green-600' ; %>
