        <%- include('../partials/footer') %>

            <script type="module" src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"
                integrity="sha256-FZsW7H2V5X9TGinSjjwYJ419Xka27I8XPDmWryGlWtw=" crossorigin="anonymous" defer></script>
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const gridContainer = document.getElementById('series-grid-container');
                    const loadMoreBtn = document.getElementById('btn-load-more-series');

                    // --- View Switcher Logic ---
                    const viewBtns = document.querySelectorAll('.view-btn');

                    function setView(viewMode) {
                        // 1. Toggle class
                        if (viewMode === 'list') {
                            gridContainer.classList.add('view-list');
                        } else {
                            gridContainer.classList.remove('view-list');
                        }

                        // 2. Update buttons
                        viewBtns.forEach(btn => {
                            if (btn.dataset.view === viewMode) {
                                btn.classList.add('view-btn-active');
                                btn.classList.remove('text-gray-400'); // Assuming inactive style
                            } else {
                                btn.classList.remove('view-btn-active');
                                btn.classList.add('text-gray-400');
                            }
                        });

                        // 3. Persist
                        localStorage.setItem('seriesViewMode', viewMode);
                    }

                    // Init from localStorage
                    const savedView = localStorage.getItem('seriesViewMode') || 'grid';
                    setView(savedView);

                    // Event listeners
                    viewBtns.forEach(btn => {
                        btn.addEventListener('click', () => {
                            const mode = btn.dataset.view;
                            setView(mode);
                        });
                    });

                    let currentFilter = {
                        type: 'series',
                        page: 1,
                        limit: 6,
                        category: 'Tất Cả',
                        dateRange: 'all',
                        startDate: '',
                        endDate: '',
                        rating: '',
                        sort: 'newest'
                    };

                    async function fetchSeries(isLoadMore = false) {
                        const pageToFetch = isLoadMore ? currentFilter.page + 1 : 1;

                        if (!isLoadMore) {
                            gridContainer.innerHTML = '<div style="width:100%; text-align:center; padding: 40px; color: #666;">Đang tìm kiếm...</div>';
                            if (loadMoreBtn) loadMoreBtn.style.display = 'none';
                        } else {
                            if (loadMoreBtn) {
                                loadMoreBtn.innerHTML = 'Đang tải...';
                                loadMoreBtn.disabled = true;
                            }
                        }

                        const params = new URLSearchParams({
                            type: currentFilter.type,
                            page: pageToFetch,
                            limit: currentFilter.limit,
                            category: currentFilter.category,
                            dateRange: currentFilter.dateRange,
                            rating: currentFilter.rating,
                            sort: currentFilter.sort,
                            startDate: currentFilter.startDate,
                            endDate: currentFilter.endDate
                        });

                        try {
                            const response = await fetch(`/api/posts?${params.toString()}`);
                            const data = await response.json();

                            if (data.success) {
                                if (!isLoadMore) {
                                    gridContainer.innerHTML = '';
                                    if (data.total === 0) {
                                        gridContainer.innerHTML = '<div style="width:100%; text-align:center; padding: 40px;">Không tìm thấy bài viết nào phù hợp.</div>';
                                    }
                                }

                                gridContainer.insertAdjacentHTML('beforeend', data.html);

                                currentFilter.page = pageToFetch;

                                if (loadMoreBtn) {
                                    if (data.hasMore) {
                                        loadMoreBtn.style.display = 'block';
                                        loadMoreBtn.innerHTML = 'Xem Thêm';
                                        loadMoreBtn.disabled = false;
                                    } else {
                                        loadMoreBtn.style.display = 'none';
                                    }
                                }

                                if (window.initRadialMenus) {
                                    window.initRadialMenus();
                                }
                                initShareButtons();
                            }
                        } catch (error) {
                            console.error(error);
                            if (!isLoadMore) gridContainer.innerHTML = '<div style="text-align:center;">Có lỗi xảy ra. Vui lòng thử lại.</div>';
                            if (isLoadMore && loadMoreBtn) {
                                loadMoreBtn.innerHTML = 'Thử lại';
                                loadMoreBtn.disabled = false;
                            }
                        }
                    }

                    // --- Share Buttons Handling ---
                    function initShareButtons() {
                        const shareBtns = document.querySelectorAll('.share-action');
                        shareBtns.forEach(btn => {
                            // Avoid double binding
                            if (btn.dataset.bound) return;
                            btn.dataset.bound = true;

                            btn.addEventListener('click', (e) => {
                                e.preventDefault();
                                const platform = btn.dataset.platform;
                                const slug = btn.dataset.slug;
                                const title = btn.dataset.title;
                                const url = `${window.location.origin}/series/${slug}`;

                                switch (platform) {
                                    case 'facebook':
                                        window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank', 'width=600,height=400');
                                        break;
                                    case 'twitter':
                                        window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`, '_blank', 'width=600,height=400');
                                        break;
                                    case 'messenger':
                                        const fbAppId = '1501202124127451'; // Thay bằng App ID thật của bạn
                                        const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
                                        if (isMobile) {
                                            window.location.href = `fb-messenger://share/?link=${encodeURIComponent(url)}`;
                                        } else {
                                            window.open(`https://www.facebook.com/dialog/send?link=${encodeURIComponent(url)}&app_id=${fbAppId}&redirect_uri=${encodeURIComponent(url)}`, '_blank', 'width=1100,height=600');
                                        }
                                        break;
                                    case 'copy':
                                        navigator.clipboard.writeText(url).then(() => {
                                            alert('Đã sao chép liên kết: ' + url);
                                        }).catch(() => {
                                            console.error('Copy failed');
                                        });
                                        break;
                                }
                            });
                        });
                    }

                    // Initial calls
                    if (window.initRadialMenus) window.initRadialMenus();
                    initShareButtons();

                    const categoryBtns = document.querySelectorAll('.filter-button');
                    categoryBtns.forEach(btn => {
                        btn.addEventListener('click', function () {
                            categoryBtns.forEach(b => {
                                b.classList.remove('filter-button-active');
                                b.classList.add('filter-button-inactive');
                            });
                            this.classList.add('filter-button-active');
                            this.classList.remove('filter-button-inactive');

                            const spanText = this.querySelector('span') ? this.querySelector('span').innerText : this.innerText;
                            currentFilter.category = spanText.trim();
                            fetchSeries(false);
                        });
                    });

                    const filterMaps = [
                        { key: 'dateRange', id: 'post-date' },
                        { key: 'rating', id: 'rating' },
                        { key: 'sort', id: 'sort-by' }
                    ];

                    filterMaps.forEach(map => {
                        const el = document.getElementById(map.id);
                        if (el) {
                            el.addEventListener('change', (e) => {
                                const val = e.target.value;
                                currentFilter[map.key] = val;

                                if (map.key === 'dateRange') {
                                    const customDiv = document.getElementById('custom-date-range');
                                    if (customDiv) {
                                        customDiv.style.display = (val === 'custom') ? 'grid' : 'none';
                                    }
                                }

                                fetchSeries(false);
                            });
                        }
                    });

                    const startInputs = document.querySelectorAll('input[name="start-date"]');
                    const endInputs = document.querySelectorAll('input[name="end-date"]');

                    function handleCustomDate() {
                        let startVal = '';
                        let endVal = '';
                        startInputs.forEach(input => { if (input.value) startVal = input.value; });
                        endInputs.forEach(input => { if (input.value) endVal = input.value; });

                        if (startVal && endVal) {
                            currentFilter.startDate = startVal;
                            currentFilter.endDate = endVal;
                            fetchSeries(false);
                        }
                    }

                    [...startInputs, ...endInputs].forEach(input => {
                        input.addEventListener('change', handleCustomDate);
                    });

                    if (loadMoreBtn) {
                        loadMoreBtn.addEventListener('click', () => {
                            fetchSeries(true);
                        });
                    }

                    if (typeof Splide !== 'undefined') {
                        const seriesCarousel = document.getElementById('series-carousel');
                        if (seriesCarousel) {
                            new Splide(seriesCarousel, {
                                type: 'loop', perPage: 1, autoplay: true, interval: 5000,
                                pauseOnHover: true, arrows: true, pagination: false,
                                breakpoints: {
                                    768: { pagination: true, arrows: false },
                                    597: { pagination: true, arrows: false }
                                }
                            }).mount();
                        }
                    }
                });
            </script>
            <script src="/js/radial-menu.js"></script>
