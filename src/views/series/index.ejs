<!DOCTYPE html>
<html lang="vi-VN" data-gen-themes="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="description" content="Khám phá các series video, podcast và bài viết về giáo dục giới tính." />
    <meta name="author" content="Gender Insights" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:title" content="Series | Gender Insights" />
    <meta property="og:description" content="Khám phá các series video, podcast và bài viết về giáo dục giới tính." />
    <meta property="og:image" content="photos/brands/gender-insights.svg" />
    <meta property="og:image:alt" content="Gender Insights" />
    <title>Gender Insights | Series</title>
    <link rel="shortcut icon" href="photos/brands/gender-insights.ico" type="image/x-icon" />
    <link rel="preload" href="/css/components/main.css" as="style" />
    <link rel="preload" href="/css/components/bases.css" as="style" />
    <link rel="preload" href="/fonts/Montserrat/Montserrat.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Montserrat/Montserrat.woff" as="font" type="font/woff" crossorigin />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css"
        integrity="sha256-5uKiXEwbaQh9cgd2/5Vp6WmMnsUr3VZZw0a8rKnOKNU=" crossorigin="anonymous" />

    <link rel="stylesheet" href="/css/components/bases.css" />
    <link rel="stylesheet" href="/css/components/main.css" />
    <link rel="stylesheet" href="/fonts/index.css" />
    <link rel="stylesheet" href="/css/series.css" />

    <link rel="alternate" href="https://gender-insights.vercel.app/series" hreflang="vi-VN" />
    <link rel="canonical" href="https://gender-insights.vercel.app/series" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        html,
        body,
        input,
        select,
        button {
            font-family: 'Montserrat', 'Segoe UI', Roboto, Arial, sans-serif;
        }
    </style>
    <script>
        const preferredTheme = ['light', 'dark'].includes(localStorage.theme) ? localStorage.theme : (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-gen-themes', preferredTheme);
    </script>
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="container">
                <section id="series-carousel" class="splide series-carousel" aria-label="Nội dung nổi bật">
                    <div class="splide__track">
                        <ul class="splide__list">
                            <% const heroPosts=(typeof posts !=='undefined' && posts.length> 0) ? posts.slice(0, 3) :
                                [];
                                %>
                                <% if (heroPosts.length> 0) { %>
                                    <% heroPosts.forEach(post=> { %>
                                        <li class="splide__slide">
                                            <div class="slide-item">
                                                <a href="/series/<%= post.slug %>" title="<%= post.title %>"
                                                    style="position: absolute; inset: 0; z-index: 2; cursor: pointer;">
                                                </a>
                                                <img src="<%= post.thumbnail %>" class="slide-image super-sharp"
                                                    alt="<%= post.title %>" loading="eager" decoding="async" />
                                                <div class="slide-gradient"></div>
                                                <div class="hero-slide-top-tags">
                                                    <div class="hero-slide-category-container">
                                                        <% let badgeClass='hero-slide-category-tag--violet' ; if
                                                            (post.category==='Podcast' ) badgeClass='postcard-tag' ; if
                                                            (post.category==='Bài Viết' ) badgeClass='article-tag' ; %>
                                                            <span class="hero-slide-category-tag <%= badgeClass %>">
                                                                <%= post.category %>
                                                            </span>
                                                    </div>
                                                    <span class="hero-slide-date-tag">
                                                        <%= post.displayDate || post.date %>
                                                    </span>
                                                </div>

                                                <div class="hero-slide-body">
                                                    <div class="hero-slide-stats">
                                                        <span>
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                                height="16" fill="currentColor" class="bi bi-eye-fill"
                                                                viewBox="0 0 16 16">
                                                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0">
                                                                </path>
                                                                <path
                                                                    d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7">
                                                                </path>
                                                            </svg>
                                                        </span>
                                                        <span class="hero-slide-views">
                                                            <%= post.views || 0 %>
                                                                lượt xem
                                                        </span>
                                                        <span class="hero-slide-separator">/</span>
                                                        <div class="hero-slide-rating">
                                                            <div class="flex items-center star-rating-container">
                                                                <% const hRating=post.avgRating || 0; %>
                                                                    <% for(let i=1; i<=5; i++) { %>
                                                                        <svg class="icon-sm <%= i <= Math.round(hRating) ? 'text-yellow-400' : 'text-gray-300' %>"
                                                                            fill="currentColor" viewBox="0 0 20 20">
                                                                            <path
                                                                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.971h4.172c.969 0 1.371 1.24.588 1.81l-3.38 2.455 1.287 3.971c.3.921-.755 1.688-1.54 1.182L10 13.34l-3.379 2.455c-.784.506-1.84-.261-1.54-1.182l1.287-3.971-3.38-2.455c-.783-.57-.38-1.81.588-1.81h4.172l1.286-3.971z">
                                                                            </path>
                                                                        </svg>
                                                                        <% } %>
                                                            </div>
                                                            <span class="hero-slide-rating-count">(<%= post.totalRatings
                                                                    || 0 %>)</span>
                                                        </div>
                                                    </div>
                                                    <a href="/series/<%= post.slug %>" title="<%= post.title %>">
                                                        <h1 class="hero-slide-title">
                                                            <%= post.title %>
                                                        </h1>
                                                    </a>
                                                    <p class="hero-slide-description">
                                                        <%= post.description %>
                                                    </p>
                                                </div>

                                                <div class="share-wrapper slide-share-wrapper">
                                                    <button class="slide-share-button" title="Chia sẻ">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                            fill="currentColor" viewBox="0 0 512 512">
                                                            <path
                                                                d="M384 192c53 0 96-43 96-96s-43-96-96-96-96 43-96 96c0 5.4 .5 10.8 1.3 16L159.6 184.1c-16.9-15-39.2-24.1-63.6-24.1-53 0-96 43-96 96s43 96 96 96c24.4 0 46.6-9.1 63.6-24.1L289.3 400c-.9 5.2-1.3 10.5-1.3 16 0 53 43 96 96 96s96-43 96-96-43-96-96-96c-24.4 0-46.6 9.1-63.6 24.1L190.7 272c.9-5.2 1.3-10.5 1.3-16s-.5-10.8-1.3-16l129.7-72.1c16.9 15 39.2 24.1 63.6 24.1z" />
                                                        </svg>
                                                    </button>
                                                    <!-- Radial Menu -->
