<!-- Notification Item Partial -->
<div class="notif-item <%= !n.isRead ? 'unread' : '' %>" data-id="<%= n.id %>" onclick="handleNotificationClick(this, '<%= n.link || '' %>')" style="cursor: <%= n.link ? 'pointer' : 'default' %>">
    <div class="notif-select" onclick="event.stopPropagation()">
        <input type="checkbox" class="notif-checkbox" value="<%= n.id %>">
    </div>
    <div class="notif-status">
        <div class="notif-dot"></div>
    </div>
    <div class="notif-icon-box">
        <% if (n.type === 'new_post') { %>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#28a745" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                <path d="M4 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5V4zm1 .5v6h6v-6H5z" />
            </svg>
        <% } else if (n.type === 'success') { %>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#5fcb97" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </svg>
        <% } else if (n.type === 'warning') { %>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#FFC107" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
        <% } else { %>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#007bff" viewBox="0 0 16 16">
                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
            </svg>
        <% } %>
    </div>
    <div class="notif-content">
        <div class="notif-title" style="font-weight: 600; margin-bottom: 2px;"><%= n.title %></div>
        <div class="notif-text"><%= n.message %></div>
        <div class="notif-time"><%= timeSince(n.createdAt) %></div>
    </div>
</div>
