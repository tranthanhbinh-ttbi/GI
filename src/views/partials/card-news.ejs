<% if (typeof posts !=='undefined' && posts.length> 0) { %>
    <% posts.forEach(post=> { %>
        <article class="article-card">
            <div class="article-category <%= post.categoryClass || 'lifestyle' %>">
                <%= post.category || 'TIN TỨC' %>
            </div>
            <div class="article-date">
                <%= post.displayDate || post.date %>
            </div>
            <div class="article-image-placeholder">
                <a href="/tin-tuc/<%= post.slug %>" style="display:block; width:100%; height:100%;">
                    <% if (post.thumbnail) { %>
                        <img src="<%= post.thumbnail %>" alt="<%= post.title %>"
                            style="width:100%; height:100%; object-fit:cover;">
                        <% } else { %>
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#ddd"
                                viewBox="0 0 16 16">
                                <path
                                    d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12zm5-6.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                            </svg>
                            <% } %>
                </a>
            </div>
            <h3 class="article-title"><a href="/tin-tuc/<%= post.slug %>" style="text-decoration:none; color:inherit;">
                    <%= post.title %>
                </a></h3>
            <p class="article-description">
                <%= post.description %>
            </p>
            <div class="article-footer">
                <span class="article-views"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                        <path
                            d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                    </svg>
                    <%= post.views || 0 %>
                </span>

                <div class="share-wrapper" style="position: relative;">
                    <button class="article-share share-action card-share-button" title="Chia sẻ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            viewBox="0 0 512 512">
                            <path
                                d="M384 192c53 0 96-43 96-96s-43-96-96-96-96 43-96 96c0 5.4 .5 10.8 1.3 16L159.6 184.1c-16.9-15-39.2-24.1-63.6-24.1-53 0-96 43-96 96s43 96 96 96c24.4 0 46.6-9.1 63.6-24.1L289.3 400c-.9 5.2-1.3 10.5-1.3 16 0 53 43 96 96 96s96-43 96-96-43-96-96-96c-24.4 0-46.6 9.1-63.6 24.1L190.7 272c.9-5.2 1.3-10.5 1.3-16s-.5-10.8-1.3-16l129.7-72.1c16.9 15 39.2 24.1 63.6 24.1z">
                            </path>
                        </svg>
                    </button>
                    <!-- Radial Menu -->
                    <div class="radial-share-menu">
                        <div class="radial-backdrop"></div>
                        <div class="radial-track">
                            <a href="#" class="share-item share-action" data-platform="facebook"
                                data-slug="<%= post.slug %>" data-title="<%= post.title %>" title="Facebook"><i
                                    class="fa-brands fa-facebook"></i></a>
                            <a href="#" class="share-item share-action" data-platform="messenger"
                                data-slug="<%= post.slug %>" data-title="<%= post.title %>" title="Messenger"><i
                                    class="fa-brands fa-facebook-messenger"></i></a>
                            <a href="#" class="share-item share-action" data-platform="twitter"
                                data-slug="<%= post.slug %>" data-title="<%= post.title %>" title="Twitter"><i
                                    class="fa-brands fa-x-twitter"></i></a>
                            <a href="#" class="share-item share-action" data-platform="copy"
                                data-slug="<%= post.slug %>" data-title="<%= post.title %>" title="Copy"><i
                                    class="fa-solid fa-copy"></i></a>
                        </div>
                    </div>
                </div>

            </div>
        </article>
        <% }) %>
            <% } else { %>
                <p>Chưa có tin tức.</p>
                <% } %>